# The isBadVersion API is already defined for you.
# @param version, an integer
# @return a bool
# def isBadVersion(version):

class Solution(object):
    def firstBadVersion(self, n):
        left = 1
        right = n

        while left < right:
            mid_point = left + ((right - left) / 2)
            if isBadVersion(mid_point):
                right = mid_point
            else:
                left = mid_point + 1
        
        return left
